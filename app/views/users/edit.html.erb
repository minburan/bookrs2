<div class="container">
 <div class ="row">
  <div class ="col-sm-12 col-md-8 col-lg-5 mx-auto">
   <h1>User info</h1>
   
     <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being saved:
       <ul>
        <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
       </ul>
     <% end %>

    <%= form_with model: @user do |f| %>
     <div class ="form">
       <label for ="user_name">Name</label>
       <input class ="form-control name" type="text" value ="<%= @user.name %>" name="user[name]" id="user_name">
     </div>
     <div class ="form">
       <%= f.label :Image %><br>
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
     </div>
     <div class="form">
      <label for="user_introduction">Introduction</label>
       <textarea class="form-control introduction" type="text" name="user[introduction]" id="user_introduction"><%= @user.introduction %></textarea>
     </div>

     <br>
     <div class ="form">
       <input type="submit" value="Update User" class="btn btn-secondary", "text-light">
     </div>
    <% end %>
  </div>
 </div>
</div>

