<!--共通部分-->
 <div class ="container">
   <div class="row">
     <div class="col-md-3">
       <%= render 'common', user: @user, book: @book %>
     </div>  

<div class ="col-md-8 offset-md-1">
  <h2>Book detail</h2> 
    <table class ="table ">
      <tbody>
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image(100,100) %>  
            <br>
            <%= link_to user_path(@user) do%>
              <%= @book.user.name %>
            <% end %>  
          </td> 
          <td>
            <%= link_to book_path(@book) do%>
              <%= @book.title %>
            <% end %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          
          <% if @book.user == current_user %>
          <td>
            <li class="btn btn-success">  
              <%= link_to "Edit", edit_book_path(@book), class: 'text-light' %>  
            </li>  
          </td>
          <td>
            <li class="btn btn-danger">
              <%= link_to "Destroy", book_path(@book), method: :delete, class: 'text-light' %>  
            </li>
          </td>
          <% end %>
        </tr>  
      </tbody>
    </table>
</div>
</div>
</div>

