<body>
  <main>
    <div class ="container">
      <div class ="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h1>Editing Book</h1>

          <% if @book.errors.any? %>
            <%= @book.errors.count %>error prohibited this obj from being saved:
             <ul>
              <% @book.errors.full_messages.each do |message| %>
               <li><%= message %></li>
              <% end %>
             </ul>
          <% end %>

          <%= form_with model: @book do |f|%>
            <div class ="form">
              <label for ="title">Title</label>
               <input class="form-control title" type="text" value ="<%= @book.title %>" name="book[title]" id="book_title">
            </div>
            <div class ="form">
              <label for ="body">Opinion</label>
               <textarea class="form-control body" type="text" name="book[body]" id="book_body"><%= @book.body %></textarea>
            </div>
            <br>
            <div class ="form">
              <input type="submit" value="Update Book" class="btn btn-success","text-light">
            </div>
          <% end %>

          <div>
            <%= link_to "Show", book_path(@book.id) %>
            |
            <%= link_to "Back", books_path %>
          </div>

        </div>
      </div>
    </div>
  </main>
</body>
